<div id="wrapper">

    <!-- Sidebar -->
    <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

      <!-- Sidebar - Brand -->
      <a class="sidebar-brand d-flex align-items-center justify-content-center" href="/">
        <div class="sidebar-brand-icon rotate-n-15">
          <i class="fas fa-laugh-wink"></i>
        </div>
        <div class="sidebar-brand-text mx-3">ReservEzy</sup></div>
      </a>

      <!-- Divider -->
      <hr class="sidebar-divider my-0">

      <!-- Nav Item - Dashboard -->
      <li class="nav-item active">
        <%= link_to dashboard_index_path,  class: "nav-link" do %>
          <i class="fas fa-fw fa-tachometer-alt"></i>
          <span>Dashboard</span></a>
          <% end %>
      </li>

      <!-- Divider -->
      <hr class="sidebar-divider">

      <!-- Heading -->
      <div class="sidebar-heading">
        Assets
      </div>

      <!-- Nav Item - Pages Collapse Menu -->
      <li class="nav-item">
      <%= link_to restaurants_path,  class: "nav-link" do %>
        <i class="fas fa-fw fa-tachometer-alt"></i>
        <span>Restaurants</span></a>
        <% end %>
    </li>
    <!-- Nav Item - Utilities Collapse Menu -->
    <li class="nav-item">
    <%= link_to dashboard_reports_path,  class: "nav-link" do %>
      <i class="fas fa-fw fa-tachometer-alt"></i>
      <span>Reports</span></a>
      <%  end %>  
        </li>
      <!-- Divider -->
      <hr class="sidebar-divider">

    
    </ul>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

          <!-- Sidebar Toggle (Topbar) -->
          <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
            <i class="fa fa-bars"></i>
          </button>


          <!-- Topbar Navbar -->
          <ul class="navbar-nav ml-auto">

            <!-- Nav Item - User Information -->
            <% if account_signed_in? %>
            <li class="nav-item"> <%= button_to "Log out", destroy_account_session_path, method: :delete, class: "btn btn-primary navbar-btn ml-0 ml-lg-3" %></li>
            <% else %>
            <% end %> 

          </ul>

        </nav>
        <!-- End of Topbar -->
       
        <!-- End of Topbar -->
        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Restaurants</h1>
          </div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Cuisine</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.cuisine %></td>
        <td><%= restaurant.description %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Delete', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div>
<div class="space">
<%= link_to 'New Restaurant', new_restaurant_path, class: "btn btn-primary navbar-btn ml-0 ml-lg-3" %>
</div>
<br>
</div>
</div>
</div>